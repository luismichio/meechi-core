{
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": false,
        "declarationMap": false,
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "outDir": "dist",
        "declaration": true,
        "noEmit": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/app",
        "src/auth.ts",
        "**/*.test.ts",
        "**/*.test.tsx",
        "src/lib/ai/worker.ts",
        "src/lib/ai/llm.worker.ts"
    ]
}